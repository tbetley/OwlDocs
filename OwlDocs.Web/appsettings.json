{
  "ConnectionStrings": {
    "TestConnection": "Server=LENOVOX1;Database=OwlDocsTest;Trusted_Connection=True;Integrated Security=True;"
  },
  "DocumentSettings": {
    "Provider": "File",
    "DirectoryRoot": "C:\\Documentation",
    "AcceptedTextFileTypes": [
      ".md",
      ".txt"
    ],
    "AcceptedImageFileTypes": [
      ".png",
      ".gif",
      ".jpg",
      ".jpeg"
    ]
  },
  "Authorization": {
    "Type": "Anonymous",
    "DocumentReaders": [
      "Domain Users"
    ],
    "DocumentWriters": [
      "Domain Users"
    ],
    "SiteAdmins": [
      "Domain Users"
    ]
  },
  "Site": {
    "SiteTitle": "DocSite"
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": { "path": "C:\\Dev\\Logs\\OwlDocs\\log.txt" }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  }
}
